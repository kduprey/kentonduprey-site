{
  "extends": "@kduprey/tsconfig/nextjs.json",
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*", "./src/*"],
      "test-utils": ["./src/test-utils"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.cjs"
  ],
  "exclude": ["node_modules"]
}
